        <Label HorizontalAlignment="Left" VerticalAlignment="Top" Margin="322,120,0,0" Height="40" Width="78" Content="Perimetro" FontSize="14" FontWeight="Bold"/>
        <Label x:Name="lbl_Area" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="481,41,0,0" Height="40" Width="156" Content=""/>
        <Label x:Name="lbl_Perimetro" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="481,120,0,0" Height="40" Width="156" Content=""/>
        <TextBox x:Name="txt_Lato1" HorizontalAlignment="Left" Height="40" TextWrapping="Wrap" VerticalAlignment="Top" Width="77" Margin="162,41,0,0"/>
        <TextBox x:Name="txt_Lato2" HorizontalAlignment="Left" Height="40" TextWrapping="Wrap" VerticalAlignment="Top" Width="77" Margin="162,120,0,0"/>
        <TextBox x:Name="txt_Lato3" HorizontalAlignment="Left" Height="40" TextWrapping="Wrap" VerticalAlignment="Top" Width="77" Margin="162,201,0,0"/>
        
    </Grid>
</Window>
